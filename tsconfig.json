{
	"compilerOptions": {
		/* Project Structure */
		"rootDir": "./src",
		"outDir": "./dist",

		/* Module System */
		"module": "NodeNext",
		"moduleResolution": "NodeNext",

		/* Target & Runtime */
		"target": "ES2022",
		"lib": ["ES2022"],

		/* Node Environment */
		"types": ["node"],

		/* Output */
		"sourceMap": true,
		"noEmit": true,

		/* Type Safety */
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"exactOptionalPropertyTypes": true,
		"allowImportingTsExtensions": true,

		/* ESM Compatibility */
		"verbatimModuleSyntax": true,
		"isolatedModules": true,

		/* Performance */
		"skipLibCheck": true
	},

	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}

